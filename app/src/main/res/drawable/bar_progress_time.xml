<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dp"/>
            <gradient
                android:angle="270"
                android:centerColor="@color/grey_600"
                android:centerY="0.45"
                android:endColor="@color/grey_600"
                android:startColor="@color/grey_600"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp"/>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/grey_200"
                    android:centerY="0.45"
                    android:endColor="@color/grey_200"
                    android:startColor="@color/grey_200"/>
            </shape>
        </clip>
    </item>
</layer-list>