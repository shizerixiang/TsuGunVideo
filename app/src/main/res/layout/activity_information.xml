<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-26dp"
    android:fitsSystemWindows="true"
    tools:context="com.tsugun.tsugunvideo.activity.InformationActivity">

    <include layout="@layout/block_information_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:elevation="6dp"
        android:id="@+id/id_video_group"
        android:orientation="vertical">

        <View
            android:id="@+id/id_video_margin"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:visibility="gone" />

        <com.tsugun.tsugunvideo.view.VideoPlayer
            android:id="@+id/id_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
