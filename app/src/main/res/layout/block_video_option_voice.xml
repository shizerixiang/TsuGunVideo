<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_main_layout_bright"
    android:layout_width="200dp"
    android:layout_height="42dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_progress_voice_or_brightness"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:showIn="@layout/block_video_layout">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/str_main_bright"
        android:scaleType="fitXY"
        android:src="@drawable/ic_vector_control_brightness" />

    <SeekBar
        android:id="@+id/id_main_bar_bright"
        style="@style/OptionSeekBar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:thumb="@null" />

</LinearLayout>