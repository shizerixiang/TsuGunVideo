<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--半透明顶部状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--允许使用transitions-->
        <item name="android:windowContentTransitions">true</item>
        <!--是否覆盖执行，其实可以理解成是否同步执行还是顺序执行-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!--半透明底部导航栏-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--appbar塌陷主题-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--toolbar主题-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--SeekBar样式-->
    <style name="VideoSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/bar_progress_time</item>
        <item name="android:thumb">@drawable/bar_progress_time_thumb</item>
        <item name="android:thumbOffset">4dp</item>
    </style>

    <!--SeekBar样式-->
    <style name="OptionSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">5dp</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/bar_progress_option</item>
        <item name="android:thumb">@drawable/bar_progress_option_thumb</item>
        <item name="android:thumbOffset">6dp</item>
    </style>

    <!--Activity切换动画-->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_out</item>
    </style>

</resources>
